            $('#showCart .dropdown-menu,#showCart2 .dropdown-menu').addClass('show')
            setTimeout(() => {
                $('#showCart .dropdown-menu,#showCart2 .dropdown-menu').removeClass('show')
            }, 5000)
        })

        let isNull = false
        function startTimer(duration, display) {
            var timer = duration, minutes, seconds;
            setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;
                var timerDiv = $('#timer');

                if (--timer < 0) {
                    timer = 0;
                    if (!isNull) {
                        $.post('/SessionTimeouter?name=VerifyCode', (res) => {
                            if (res) {
                                isNull = !isNull;
                                $('#btnVerifySubmit').attr('disabled', 'disabled');
                                $('#resendVerifyCode').show();
                                timerDiv.hide();
                            }
                        });
                    }

                } else {
                    if (timer < 10) timerDiv.removeClass('text-dark').addClass('text-danger')
                }
            }, 1000);
        }

        window.onload = function () {
            var display = document.querySelector('#timer');
            if (display != null) {
                var fiveMinutes = 120;
                startTimer(fiveMinutes, display);
            }
        };
    </script>

