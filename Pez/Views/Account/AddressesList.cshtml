@model IEnumerable<DataLayer.Models.Addresses>
@{ int c = 1;}



<table class="table border table-striped">
    <tr>
        <th>ردیف</th>
        <th>
            آدرس
        </th>

        <th>
            استان
        </th>
        <th>
            شهر
        </th>
        <th>
            کدپستی
        </th>
        <th>
            آدرس اصلی؟
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@c</td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostalCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsDefault)
    </td>
    <td>
        <a onclick="addEditAddress('edit',@item.Id)" class="btn btn-warning">ویرایش</a>
        <a onclick="deleteAddress(@item.Id)" class="btn btn-danger">حذف</a>

    </td>
</tr>
    c++;
}

</table>
