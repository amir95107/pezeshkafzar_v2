@model IEnumerable<DataLayer.Models.Products>

@if (Model.Any())
{
    <div class="row-container pr-0 pl-0" id="LastSeen" style="background-color:#6d6e71">
        <div class="container text-center">
            <ul class="nav nav-pills nav-border-anim nav-big justify-content-center" role="tablist">
                <li class="nav-item">
                    <a class="nav_link shpl" id="products-featured-link" href="/Archive">آخرین محصولات مشاهده شده</a>
                </li>
            </ul>

            <div class="tab-content tab-content-carousel">
                <div class="tab-pane p-0 fade show active" id="products-featured-tab" role="tabpanel"
                     aria-labelledby="products-featured-link">
                    <div class="owl-carousel owl-full carousel-equal-height carousel-with-shadow" data-toggle="owl"
                         data-owl-options='{
                                "nav": true,
                                "dots": false,
                                "margin": 20,
                                "loop": false,
                         "lazyLoad":true,
                                "responsive": {
                                    "0": {
                                        "items":2
                                    },
                                    "600": {
                                        "items":2
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1200": {
                                        "items":5
                                    }
                                }
                            }'>
                        @foreach (var item in Model.Where(l=>l.IsActive&&l.IsAcceptedByAdmin))
                        {
                            @Html.Action("_product", item)
                        }






                    </div><!-- End .owl-carousel -->
                </div><!-- .End .tab-pane -->
                <!-- .End .tab-pane -->
            </div><!-- End .tab-content -->
        </div>
    </div>
}