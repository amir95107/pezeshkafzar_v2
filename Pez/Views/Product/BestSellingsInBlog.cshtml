@model IEnumerable<Pezeshkafzar_v2.ViewModels.BestSellingsInBlog>
<div class="widget mb-1 bg-white p-1">
    <h3 class="widget-title text-center bg-blue p-2 text-white">پرفروش ترین محصولات</h3><!-- End .widget-title -->

    <ul class="posts-list">
        @foreach (var item in Model)
        {
            <li>
                <figure>
                    <a href="/ShowProduct/@item.ProductID/@item.SefUrl?ref=@Context.Request.Path.ToString().Split('/')[3]" class="shpl">
                        <img src="~/Images/ProductImages/Thumb/@item.Image" alt="@item.Title" title="@item.Title">
                    </a>
                </figure>

                <div>
                    <h4><a href="/ShowProduct/@item.ProductID/@item.SefUrl?ref=@Context.Request.Path.ToString().Split('/')[3]">@item.Title</a></h4>
                </div>

                <div>
                    <strong class="text" style="color: var(--green); font-size: 1.75rem;">@item.PriceAfterDiscount.ToString("#,0")</strong><small style="margin-right:0.5rem">تومان</small>
                    @if (item.Price != item.PriceAfterDiscount)
                    {
                         <del style="font-size: 1.25rem;">@item.Price.ToString("#,0")</del><small style="margin-right:0.5rem">تومان</small>
                    }
                </div>
            </li>
        }

    </ul><!-- End .posts-list -->
</div>
