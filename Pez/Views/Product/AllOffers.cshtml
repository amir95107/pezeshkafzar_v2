@model IEnumerable<DataLayer.Models.Products>
@{
    ViewBag.Title = "تخفیف ها - پزشک افزار";
    ViewBag.Description = "در این صفحه میتوانید تمامی محصولاتی با تخفیف ارائه میشوند را مشاهده فرمایید.";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    int pageCount = ViewBag.PageCount;
    int currentPage = ViewBag.CurrentPage;
}

<div class="page-content mt-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 ">
                <div class="toolbox justify-content-center">
                    <header>
                        <h3 class="m-auto mb-0">تخفیف دارها</h3>
                    </header>
                </div>
                <div class="products mb-3" id="">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-6 col-md-3 col-lg-3">
                                @* @Html.Action("_product", product) *@
                            </div><!-- End .col-sm-6 col-lg-4 -->
                        }


                    </div><!-- End .row -->
                </div><!-- End .products -->

                @if (pageCount > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage==1?"disabled":"")">
                                <a class="page-link page-link-prev shpl" href="/AllOffers?pageId=@(currentPage-1)" aria-label="Previous" tabindex="-1"
                                   aria-disabled="true">
                                    <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>قبلی
                                </a>
                            </li>

                            @for (int i = 1; i <= pageCount; i++)
                            {
                                <li class="page-item @(i==currentPage?"active":"")" aria-current="page"><a class="page-link shpl" href="/AllOffers?pageId=@i">@i</a></li>
                            }

                            <li class="page-item @(currentPage==pageCount?"disabled":"")">
                                <a class="page-link page-link-next shpl" href="/AllOffers?pageId=@(currentPage+1)" aria-label="Next">
                                    بعدی<span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>



