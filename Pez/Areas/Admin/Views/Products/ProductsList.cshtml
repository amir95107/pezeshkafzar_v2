@model IEnumerable<DataLayer.Models.Products>

<table class="table table-bordered table-responsive products_table bg-white d-md-table" dir="rtl">
    <thead class=" text-primary">
        <tr>
            <th>
                تصویر
            </th>
            <th>
                عنوان
            </th>
            <th>
                گروه های این محصول
            </th>
            <th>
                قیمت
            </th>

            <th>
                قیمت پس از تخفیف
            </th>

            <th>
                درصد تخفیف
            </th>

            <th>
                موجودی انبار
            </th>

            <th>
                تاریخ ایجاد
            </th>

            <th>
                بازدید
            </th>
            <th>
                وضعیت
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr data-seller-id="@item.Id" id="product-@item.Id" class="product-item @((!item.IsActive)?"product-deactive":"")">
                    <td>
                        <img class="thumbnail" src="/Images/ProductImages/Thumb/@item.ImageName" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @if (item.Product_Selected_Groups.Any())
                        {
                            int i = 0;
                            <ol class="p-0 pgl">
                                @foreach (var group in item.Product_Selected_Groups)
                                {
                                    <li>
                                        @group.Product_Groups.GroupTitle
                                    
                                    </li>
                                    @if (i != item.Product_Selected_Groups.Count - 1)
                                    {
                                        <li>-</li>
                                    }
                                    i++;
                                }
                            </ol>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PriceAfterDiscount)
                    </td>

                    <td>
                        % @(
                          Math.Round((item.Price - item.PriceAfterDiscount) * 100 / item.Price , 0)
                )
                    </td>

                    <td>
                        @item.Stock
                    </td>

                    <td>
                        @item.CreateDate.ToString("dddd, dd MMMM yyyy")
                    </td>
                    <td>
                        @item.Visit
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="text-success">فعال</span>
                        }
                        else
                        {
                            <span class="text-danger">غیر فعال</span>
                        }

                    <td>
                        <a class="btn btn-default btn-xs p-2 m-1" href="@Url.Action("ProductFeaturs",new {id=item.Id})">ویژگی های محصول</a>
                        <a class="btn btn-info btn-xs p-2 m-1" href="@Url.Action("Gallery",new {id=item.Id})">گالری محصول</a>
                        <a class="btn btn-outline-info btn-xs p-2 m-1" href="@Url.Action("ProductBrand",new {id=item.Id})">برند محصول</a>
                        <a class="btn btn-warning btn-xs p-2 m-1" href="@Url.Action("Edit",new {id=item.Id})">ویرایش محصول</a>
                        @if (item.IsActive)
                        {
                            <a href="#" class="btn btn-outline-danger btn-xs p-2 m-1" onclick="deactiveProduct('@item.Id')">غیر فعال کردن محصول</a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-outline-success btn-xs p-2 m-1" onclick="activateProduct('@item.Id')">فعال کردن محصول</a>
                        }
                        
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9"><div class="alert alert-warning m-1 text-center">هیچ محصولی یافت نشد!</div></td>
            </tr>
        }
    </tbody>

</table>
<nav aria-label="...">
    <ul class="pagination pagination-sm justify-content-center" dir="ltr">

        @for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            var isCurrent = i == ViewBag.PageNumber;
            <li class="page-item @(isCurrent?"active":"")">
                @if (isCurrent)
                {
                    <span class="page-link">
                        @i
                        <span class="sr-only">(current)</span>
                    </span>
                }
                else
                {
                    <a class="page-link" href="/admin/products?page=@i">
                        @i
                    </a>
                }
            </li>
        }
    </ul>
</nav>