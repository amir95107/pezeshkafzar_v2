@model DataLayer.Models.SpecialProducts

@{
    ViewBag.Title = "CreateSpecialProduct";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultAdmin.cshtml";
}

<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">افزودن محصول جدید</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @{
                List<DataLayer.Models.Products> list = ViewBag.Products;
            }

            <div class="form-group ">
                <label class="control-label col-md-2">
                    انتخاب محصولات
                </label>
                <div class="">
                    <select name="ProductID" id="productList">
                        <optgroup label="محصولات">
                            @foreach (var item in list)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </optgroup>
                    </select>
                </div>
            </div>




            <div class="form-group">
                @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    
                    @Html.EditorFor(model => model.CreateDate)
                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExpireDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.EditorFor(model => model.ExpireDate)
                    @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 ">
                    <input type="submit" value="ثبت" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    <div class="text-left">
        <a class="btn btn-outline-warning" href="@Url.Action("SpecialProducts")">بازگشت به لیست محصولات</a>
    </div>
</div>



@section Scripts{
    <link href="~/Admin/Content/css/select2.min.css" rel="stylesheet" />
    <script src="~/Admin/Content/js/plugins/select2.min.js"></script>
    <link href="~/Admin/Content/css/persian-datepicker.css" rel="stylesheet" />
    <script src="~/Admin/Content/js/plugins/persian-datepicker.js"></script>
    <script>
        $(document).ready(function () {

            // create DatePicker from input HTML element
            $("#CreateDate").datepicker();
            $("#ExpireDate").datepicker();
            $('#productList').select2()
        });
    </script>
}
