@using DataLayer.Models
@model DataLayer.Models.Product_Galleries

@{
    ViewBag.Title = "گالری تصاویر محصول";
    string title = ViewBag.PTitle;
    string image = ViewBag.Image;
}
<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">گالری تصاویر محصول @title</h2>

    @using (Html.BeginForm("Gallery", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProductID)
            <div class="col-md-4">
                <div class="form-horizontal">
                    <p>@title</p>
                    <div><img src="~/Images/ProductImages/Thumb/@image" width="100" title="@title" alt="@title" /></div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="">
                            @*@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input name="Title" id="Title" value="@title" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="">
                            <input type="file" name="imgUp" />
                            @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 ">
                            <input type="submit" value="ثبت تصویر" class="btn btn-outline-success" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @{
                    List<Product_Galleries> list = ViewBag.Galleries;

                    <table class="table table-bordered">
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان</th>
                            <th></th>
                        </tr>
                        @foreach (var item in list)
                        {
                            <tr>
                                <td>
                                    <img id="gallery-img-@item.Id" src="/Images/ProductImages/Thumb/@item.ImageName" width="150" class="thumbnail" />
                                </td>
                                <td>
                                    @item.Products.Title
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-info" href="/admin/Products/SetAsMainImage?GalleryID=@item.Id&ProductID=@item.ProductID">
                                        تصویر اصلی
                                    </a>
                                    <a class="btn-outline-danger btn btn-sm" href="/Admin/Products/DeleteGallery/@item.Id">
                                        <i class="now-ui-icons ui-1_simple-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    }
    <div class="text-left">
        <a class="btn btn-outline-warning" href="/admin/products/index">بازگشت به لیست محصولات</a>
    </div>
</div>

