@{
    List<string> images = ViewBag.Images;
    bool inMediaPage = (Context.Request.Path == "/Admin/home/media");
}

<div class="row">
    @foreach (var item in images)
    {
        <div class="@(inMediaPage?"col-sm-6 col-md-3 col-lg-2":"col-6")">
            <div class="card">
                <div class="card-body text-center">
                    <a>
                        <img onclick="@(inMediaPage?"":"selectThisImage(event)")" src="~/Images/ProductImages/Thumb/@item" class="show-in-modal" style="margin: auto" />
                    </a>
                </div>
            </div>
        </div>
    }
</div>
