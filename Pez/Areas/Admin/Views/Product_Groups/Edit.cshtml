@model DataLayer.Models.Product_Groups

@{
    ViewBag.Title = "Edit";
}

<form action="/admin/product_groups/edit" asp-controller="Product_Groups" method="POST" data-ajax="true" data-ajax-success="success" data-ajax-update="#listGroup">
    <!-- form content-->
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ParentID)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label">عنوان</label>
            <div class="">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" ">
                <input type="submit" value="ویرایش" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>
