

@{
    ViewBag.Title = "Index";
}

<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">دسته بندی محصولات</h2>
    <div class="text-right">
        <a class="btn btn-outline-info m-2" onclick="window.location.href='/Admin/Product_Groups/VisitCountCategories'">تحلیل بازدید از دسته بندی ها</a>
        <a class="btn btn-outline-success m-2" onclick="window.location.href='/Admin/Orders/LoggedCarts'">تحلیل سبد خرید</a>
    </div>
    <hr />
    <p>
        <a class="btn btn-success" onclick="Create()">افزودن سرگروه جدید</a>
        <input type="text" id="productGroupSearch" placeholder="جستجو در دسته بندی ها" class="form-control pull-left" />
    </p>


    <div id="listGroup">
        @Html.Action("ListGroups")
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header d-block">
                    <button type="button" class="close pull-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="m-0 modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body" id="myModalBody">

                </div>
            </div>
        </div>
    </div>
</div>
