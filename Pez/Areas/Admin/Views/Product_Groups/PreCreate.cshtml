@model DataLayer.Models.Product_Groups

@{
    ViewBag.Title = "Create";
}

<form action="/admin/Product_Groups/Create" asp-controller="Product_Groups" method="POST" data-ajax="true" data-ajax-mode="replace" data-ajax-success="success" data-ajax-update="#listGroup">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ParentID)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label">عنوان</label>
            <div class="">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class=" ">
                <input type="submit" value="ثبت گروه" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

