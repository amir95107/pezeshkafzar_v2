@model DataLayer.Models.Page

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultAdmin.cshtml";
}

<div style="height:75px"></div>
<div class="container bg-white p-2" dir="rtl">

    <h2 class="text-center p-2 border shadow ">افزودن صفحه جدید</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">

            <div class="form-group">
                <label class="control-label">عنوان</label>
                <div class="">
                    @Html.EditorFor(model => model.PageTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PageTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">محتوا</label>
                <div class="">
                    <textarea id="PageContent" name="PageContent"></textarea>
                    @Html.ValidationMessageFor(model => model.PageContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">عنوان تب صفحه</label>
                <div class="">
                    @Html.EditorFor(model => model.HeadTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HeadTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">توضیحات متا</label>
                <div class="">
                    @Html.EditorFor(model => model.MetaDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">لینک</label>
                <div class="">
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 ">
                    <input type="submit" value="ایجاد" class="btn btn-success btn-lg" />
                </div>
            </div>
        </div>
    }
    <div class="text-left">
        <a class="btn btn-warning" href="/admin/pages">بازگشت</a>
    </div>
</div>


@section Scripts
{
    <style>
        .form-group {
            text-align: center
        }
    </style>
    <script src="~/admin/content/ckeditor/ckeditor.js"></script>
    <script src="~/admin/content/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function () {
            $('#PageContent').ckeditor();
        });
    </script>
}